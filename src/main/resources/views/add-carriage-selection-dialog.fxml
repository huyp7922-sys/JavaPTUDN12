<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.ptudn12.main.controller.AddCarriageSelectionDialogController" 
            prefHeight="600.0" prefWidth="1200.0">

    <!-- Nội dung chính, chia làm 2 phần -->
    <center>
        <HBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- === (1) KHUNG LỚN BÊN TRÁI: DANH SÁCH TOA === -->
                <VBox spacing="10.0" HBox.hgrow="NEVER" minWidth="300.0">
                    <children>
                        <!-- Thanh lọc -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Lọc theo loại toa:" />
                                <ComboBox fx:id="filterComboBox" prefWidth="150.0" />
                            </children>
                        </HBox>
                        <!-- Bảng danh sách toa -->
                        <TableView fx:id="availableCarriagesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="carriageIdColumn" prefWidth="100.0" text="Mã Toa" />
                                <TableColumn fx:id="carriageTypeColumn" prefWidth="198.0" text="Loại Toa" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <!-- === (2) KHUNG LỚN BÊN PHẢI: CHI TIẾT CẤU TRÚC === -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- Khung trên chứa cấu trúc toa -->
                        <StackPane fx:id="carriageDetailContainer" VBox.vgrow="ALWAYS" style="-fx-border-color: lightgray;">
                            <children>
                                <Label text="Hãy chọn 1 toa để xem chi tiết cấu trúc" />
                            </children>
                        </StackPane>
                        <!-- Thanh dưới chứa các nút chức năng -->
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="selectButton" mnemonicParsing="false" onAction="#handleSelect" text="Chọn toa" styleClass="primary-button" />
                                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" text="Thoát" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>