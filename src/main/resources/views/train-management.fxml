<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ptudn12.main.controller.TrainManagementController"
            stylesheets="@train-management.css"
            prefWidth="1200" prefHeight="700">

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Header Title -->
			<BorderPane>
                <!-- Tiêu đề "Quản Lý Tàu" ở bên trái -->
                <left>
                    <Label text="Quản Lý Tàu" styleClass="page-title" BorderPane.alignment="CENTER_LEFT"/>
                </left>
                <!-- Khu vực tìm kiếm ở bên phải -->
                <right>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <children>
                            <TextField fx:id="searchTextField" promptText="Nhập mác tàu cần tìm kiếm" styleClass="search-text-field" minWidth="200"/>
                            <Button fx:id="searchButton" onAction="#handleSearch" text="Tìm kiếm" styleClass="primary-button"/>
                            <Button fx:id="showAllButton" onAction="#handleShowAll" text="Hiển thị tất cả" styleClass="secondary-button"/>
                        </children>
                    </HBox>
                </right>
            </BorderPane>

            <!-- Train Table -->
            <TableView fx:id="trainTable" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="trainCodeColumn" text="Mác Tàu" minWidth="100"/>
                    <TableColumn fx:id="carriageCountColumn" text="Số Toa" minWidth="80"/>
                    <TableColumn fx:id="totalSeatsColumn" text="Tổng Chỗ Ngồi" minWidth="120"/>
                    <TableColumn fx:id="structureColumn" text="Cấu trúc tàu" minWidth="450"/>
                    <TableColumn fx:id="statusColumn" text="Trạng Thái" minWidth="120"/>
                </columns>
            </TableView>

            <!-- Bottom Action Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="totalTrainsLabel" styleClass="total-count-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="15" alignment="CENTER_RIGHT">
                	<Button text="Làm mới" styleClass="secondary-button" onAction="#handleRefresh"/>
                    <Button text="Lập tàu mới" styleClass="primary-button" onAction="#handleCreateTrain"/>
                    <Button text="Đăng kí toa mới" styleClass="secondary-button" onAction="#handleRegisterCarriage"/>
                    <Button fx:id="configureTrainButton" text="Cấu hình tàu" styleClass="secondary-button" onAction="#handleConfigureTrain"/>
                </HBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>