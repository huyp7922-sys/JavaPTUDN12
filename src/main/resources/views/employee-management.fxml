<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ptudn12.main.controller.EmployeeManagementController"
      stylesheets="@employee-styles.css" spacing="10" prefHeight="600.0" prefWidth="1000.0">
    <padding>
        <Insets top="15" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label text="Quản Lý Nhân Viên">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#addEmployee" styleClass="button-add" text="Thêm" />
                <Button onAction="#editEmployee" styleClass="button-edit" text="Sửa" />
                <Button onAction="#deleteEmployee" styleClass="button-delete" text="Xóa" />
                <TextField fx:id="filterField" promptText="Lọc..." prefWidth="200"/>
            </children>
        </HBox>

        <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="maNVCol" text="Mã NV" prefWidth="75"/>
                <TableColumn fx:id="hoTenCol" text="Họ Tên" prefWidth="150"/>
                <TableColumn fx:id="cccdCol" text="CCCD" prefWidth="120"/>
                <TableColumn fx:id="ngaySinhCol" text="Ngày Sinh" prefWidth="100"/>
                <TableColumn fx:id="gioiTinhCol" text="Giới Tính" prefWidth="75"/>
                <TableColumn fx:id="chucVuCol" text="Chức Vụ" prefWidth="120"/>
                <TableColumn fx:id="sdtCol" text="Số Điện Thoại" prefWidth="120"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="180"/>
                <TableColumn fx:id="trangThaiCol" text="Trạng Thái" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>