<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ptudn12.main.controller.EmployeeManagementController"
      stylesheets="@employee-styles.css"
      spacing="20"
      style="-fx-background-color: #f8f9fa;"
      prefHeight="600.0"
      prefWidth="1000.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-box">
        <Label text="Quản Lý Nhân Viên" styleClass="header-title"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#addEmployee" styleClass="button-add" text="Thêm Mới" />
        <Button onAction="#editEmployee" styleClass="button-edit" text="Chỉnh Sửa" />
        <Button onAction="#deleteEmployee" styleClass="button-delete" text="Xóa" />
        <TextField fx:id="filterField" promptText="Tìm kiếm nhân viên..." prefWidth="250"/>
    </HBox>

    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="maNVCol" text="Mã NV" prefWidth="80"/>
            <TableColumn fx:id="hoTenCol" text="Họ và Tên" prefWidth="160"/>
            <TableColumn fx:id="cccdCol" text="CCCD" prefWidth="130"/>
            <TableColumn fx:id="ngaySinhCol" text="Ngày Sinh" prefWidth="110"/>
            <TableColumn fx:id="gioiTinhCol" text="Giới Tính" prefWidth="90"/>
            <TableColumn fx:id="chucVuCol" text="Chức Vụ" prefWidth="130"/>
            <TableColumn fx:id="sdtCol" text="Điện Thoại" prefWidth="130"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
            <TableColumn fx:id="trangThaiCol" text="Trạng Thái" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
