<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20" styleClass="help-container">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Title -->
    <Label text="Trợ Giúp &amp; Hướng Dẫn Sử Dụng" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a202c;"/>

    <!-- Divider -->
    <Separator/>

    <!-- Scrollable Content -->
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-border-color: transparent; -fx-background-color: transparent;">
        <VBox spacing="20" style="-fx-padding: 10;">
            
            <!-- Getting Started -->
            <VBox spacing="10">
                <Label text="Bắt Đầu Sử Dụng" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="1. Đăng nhập bằng tài khoản của bạn để truy cập hệ thống" wrapText="true" style="-fx-text-fill: #4a5568;"/>
                <Label text="2. Điều hướng bằng cách sử dụng menu trên thanh bên trái" wrapText="true" style="-fx-text-fill: #4a5568;"/>
                <Label text="3. Mỗi mô-đun có các chức năng cụ thể để quản lý các khía cạnh khác nhau" wrapText="true" style="-fx-text-fill: #4a5568;"/>
            </VBox>

            <Separator/>

            <!-- Dashboard -->
            <VBox spacing="10">
                <Label text="Dashboard (Bảng Điều Khiển)" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Dashboard hiển thị các chỉ số chính:" wrapText="true" style="-fx-text-fill: #4a5568;"/>
                <VBox spacing="5" style="-fx-padding: 0 0 0 20;">
                    <Label text="- Tổng Tuyến Đường: Số lượng tuyến đường đang hoạt động" style="-fx-text-fill: #4a5568;"/>
                    <Label text="- Lịch Trình Hôm Nay: Các lịch trình chạy trong ngày hôm nay" style="-fx-text-fill: #4a5568;"/>
                    <Label text="- Tổng Số Tàu: Tổng số tàu trong hệ thống" style="-fx-text-fill: #4a5568;"/>
                    <Label text="- Doanh Thu Tháng: Tổng doanh thu cho tháng hiện tại" style="-fx-text-fill: #4a5568;"/>
                </VBox>
            </VBox>

            <Separator/>

            <!-- Route Management -->
            <VBox spacing="10">
                <Label text="Quản Lý Tuyến Đường" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Quản lý các tuyến tàu với thông tin ga đi và ga đến:" wrapText="true" style="-fx-text-fill: #4a5568;"/>
                <Label text="- Nhấp 'Thêm' để tạo một tuyến đường mới" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Nhấp 'Sửa' để chỉnh sửa các tuyến đường hiện có" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Nhấp 'Xóa' để xóa các tuyến đường" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
            </VBox>

            <Separator/>

            <!-- Schedule Management -->
            <VBox spacing="10">
                <Label text="Quản Lý Lịch Trình" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Tạo và quản lý lịch trình chạy tàu:" wrapText="true" style="-fx-text-fill: #4a5568;"/>
                <Label text="- Chọn một tuyến đường và gán một tàu" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Đặt thời gian khởi hành và đến" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Theo dõi trạng thái lịch trình (chưa khởi hành, đang chạy, đã kết thúc)" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
            </VBox>

            <Separator/>

            <!-- Train Management -->
            <VBox spacing="10">
                <Label text="Quản Lý Tàu" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Quản lý thông tin tàu và sức chứa:" wrapText="true" style="-fx-text-fill: #4a5568;"/>
                <Label text="- Thêm tàu mới với dung lượng chỗ ngồi" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Theo dõi trạng thái tàu và bảo dưỡng" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Gán tàu cho các tuyến đường cụ thể" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
            </VBox>

            <Separator/>

            <!-- Ticket Sales -->
            <VBox spacing="10">
                <Label text="Bán Vé" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Xử lý đặt chỗ và bán vé cho khách hàng:" wrapText="true" style="-fx-text-fill: #4a5568;"/>
                <Label text="- Tìm kiếm các lịch trình có sẵn" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Chọn chỗ ngồi và tạo đặt chỗ" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
                <Label text="- Xử lý thanh toán và tạo hoá đơn" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 0 20;"/>
            </VBox>

            <Separator/>

            <!-- FAQ -->
            <VBox spacing="10">
                <Label text="Các Câu Hỏi Thường Gặp" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Hỏi: Làm cách nào để đặt lại mật khẩu của tôi?" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Trả lời: Liên hệ với quản trị viên hệ thống của bạn để đặt lại mật khẩu." wrapText="true" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 10 20;"/>
                
                <Label text="Hỏi: Tôi có thể sửa đổi các đặt chỗ trong quá khứ không?" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Trả lời: Không thể sửa đổi các đặt chỗ trong quá khứ, nhưng bạn có thể tạo những cái mới." wrapText="true" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 10 20;"/>
                
                <Label text="Hỏi: Doanh thu được tính như thế nào?" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Trả lời: Doanh thu dựa trên các bán vé hoàn thành cho khoảng thời gian được chỉ định." wrapText="true" style="-fx-text-fill: #4a5568; -fx-padding: 0 0 10 20;"/>
            </VBox>

        </VBox>
    </ScrollPane>

</VBox>
