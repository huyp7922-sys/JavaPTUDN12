<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ptudn12.main.controller.InvoiceManagementController"
            stylesheets="@styles.css"
            prefWidth="1200" prefHeight="700">

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER">
                <Label text="Quản Lý Hóa Đơn" styleClass="page-title"/>
            </HBox>

            <!-- Filter Controls -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Lọc từ ngày:" styleClass="form-label"/>
                <ComboBox fx:id="dayFilterCombo" promptText="Ngày"/>
                <ComboBox fx:id="monthFilterCombo" promptText="Tháng"/>
                <ComboBox fx:id="yearFilterCombo" promptText="Năm"/>
                <Button text="Lọc" styleClass="primary-button" onAction="#handleFilterByDate"/>
                <Button text="Làm mới" styleClass="secondary-button" onAction="#handleRefresh"/> <!-- Nút làm mới thông minh -->
                <Region HBox.hgrow="ALWAYS"/> <!-- Đẩy nút reset sang phải -->
                <Button text="Hiển thị tất cả" styleClass="secondary-button" onAction="#handleShowAll"/> <!-- Nút reset bộ lọc -->
            </HBox>

            <!-- Table -->
            <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="Mã Hóa đơn" minWidth="150"/>
                    <TableColumn fx:id="employeeColumn" text="Nhân viên lập" minWidth="200"/>
                    <TableColumn fx:id="customerColumn" text="Khách hàng" minWidth="200"/>
                    <TableColumn fx:id="dateColumn" text="Ngày lập" minWidth="180"/>
                    <TableColumn fx:id="typeColumn" text="Loại hóa đơn" minWidth="150"/>
                </columns>
            </TableView>

            <!-- Bottom Action Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="totalInvoicesLabel" styleClass="total-count-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button text="In" styleClass="primary-button" onAction="#handlePrintInvoice"/>
                </HBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>