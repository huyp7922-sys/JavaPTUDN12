<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ptudn12.main.controller.RouteManagementController"
            stylesheets="@../styles.css"
            prefWidth="1200" prefHeight="700">

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER">
                <Label text="Quản Lý Tuyến Đường" styleClass="page-title"/>
            </HBox>

            <!-- Search and Filter Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <HBox.margin>
                    <Insets top="10" bottom="10"/>
                </HBox.margin>

                <ComboBox fx:id="startStationCombo" promptText="Tất cả điểm đi" prefWidth="150" styleClass="filter-combo"/>
                <ComboBox fx:id="endStationCombo" promptText="Tất cả điểm đến" prefWidth="150" styleClass="filter-combo"/>
                <ComboBox fx:id="statusCombo" promptText="Tất cả trạng thái" prefWidth="150" styleClass="filter-combo"/>
                <Button text="Thêm" styleClass="add-button" onAction="#handleAddRoute"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="routeTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="Mã Tuyến Đường" minWidth="120"/>
                    <TableColumn fx:id="startStationColumn" text="Điểm Đi (Ga)" minWidth="150"/>
                    <TableColumn fx:id="endStationColumn" text="Điểm Đến (Ga)" minWidth="150"/>
                    <TableColumn fx:id="distanceColumn" text="Khoảng Cách (km)" minWidth="120"/>
                    <TableColumn fx:id="durationColumn" text="Thời Gian Dự Kiến" minWidth="140"/>
                    <TableColumn fx:id="priceColumn" text="Giá cơ bản" minWidth="120"/>
                    <TableColumn fx:id="statusColumn" text="Trạng Thái" minWidth="110" maxWidth="130"/>
                </columns>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Làm mới" styleClass="secondary-button" onAction="#handleRefresh"/>
                <Button text="Phát triển tuyến đường" styleClass="secondary-button" onAction="#handleDevelopRoute"/>
                <Button text="Sửa" styleClass="primary-button" onAction="#handleEditRoute"/>
                <Button text="Xóa" styleClass="danger-button" onAction="#handleDeleteRoute"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>