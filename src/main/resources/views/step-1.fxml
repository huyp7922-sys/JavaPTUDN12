<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contentArea" spacing="20.0" xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ptudn12.main.controller.Step1Controller"
      stylesheets="@ban-ve.css"
      styleClass="banve-content-wrapper">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <children>
        <!-- Tiêu đề chính -->
        <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
               styleClass="banve-title" text="BÁN VÉ TÀU" textAlignment="CENTER">
            <font>
                <Font size="38.0"/>
            </font>
        </Label>

        <!-- Thanh bước -->
        <HBox alignment="CENTER" spacing="20.0" styleClass="step-indicator-box">
            <children>
                <Label alignment="CENTER" styleClass="step-button, step-button-active" text="Bước 1: Chọn chuyến tàu"/>
                <Label alignment="CENTER" styleClass="step-button" text="Bước 2: Chọn chỗ ngồi"/>
                <Label alignment="CENTER" styleClass="step-button" text="Bước 3: Thông tin hành khách"/>
                <Label alignment="CENTER" styleClass="step-button" text="Bước 4: Thanh toán"/>
            </children>
        </HBox>

        <!-- Box 1: Thông tin hành trình -->
        <TitledPane collapsible="false" styleClass="section-title-pane box-border" text="Thông tin hành trình">
            <content>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
<!--                        <ColumnConstraints prefWidth="80.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="80.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="220.0"/>-->
                        
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                    </columnConstraints>

                    <rowConstraints>
<!--                        <RowConstraints prefHeight="40.0"/>
                        <RowConstraints prefHeight="40.0"/>-->
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                    <children>
                        <Label text="Ga đi:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="lblText"/>
                        <ComboBox fx:id="comboGaDi" promptText="Chọn ga đi"
                                  styleClass="custom-combo-box"
                                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Ga đến:" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="lblText"/>
                        <ComboBox fx:id="comboGaDen" promptText="Chọn ga đến"
                                  styleClass="custom-combo-box"
                                  GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                        <Label text="Ngày đi:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="lblText"/>
                        <DatePicker fx:id="dateNgayDi" maxWidth="1.7976931348623157E308"
                                    styleClass="date-picker"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Ngày về:" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="lblText"/>
                        <DatePicker fx:id="dateNgayVe" maxWidth="1.7976931348623157E308"
                                    styleClass="date-picker"
                                    GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                        <HBox alignment="CENTER_LEFT" spacing="15.0" GridPane.columnIndex="4" GridPane.rowIndex="0">
                            <children>
                                <RadioButton fx:id="radioMotChieu" text="Một chiều" selected="true" styleClass="lblText">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="tripTypeGroup"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="radioKhuHoi" text="Khứ hồi" toggleGroup="$tripTypeGroup" styleClass="lblText"/>
                            </children>
                        </HBox>

                        <Button fx:id="btnTimKiem" text="Tìm kiếm"
                                prefWidth="140.0" prefHeight="40.0"
                                styleClass="btnTimKiem"
                                GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
            </content>
        </TitledPane>

        <!-- Box 2: Danh sách chuyến tàu -->
        <TitledPane collapsible="false" styleClass="section-title-pane box-border" text="Danh sách chuyến tàu">
            <content>
                <VBox spacing="10.0" alignment="CENTER">
                    <children>
                        <Label text="(Chưa có dữ liệu, vui lòng chọn hành trình)" style="-fx-text-fill: gray;"/>
                    </children>
                </VBox>
            </content>
        </TitledPane>
    </children>
</VBox>

