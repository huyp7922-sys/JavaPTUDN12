<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ptudn12.main.controller.AddScheduleDialogController"
      spacing="15" prefWidth="500" prefHeight="500">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Thêm Lịch Trình Mới" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Separator/>
    
    <!-- Tuyến đường -->
    <VBox spacing="5">
        <Label text="Tuyến Đường:"/>
        <ComboBox fx:id="routeCombo" maxWidth="Infinity" promptText="Chọn tuyến"/>
    </VBox>
    
    <!-- Tàu -->
    <VBox spacing="5">
        <Label text="Tàu:"/>
        <ComboBox fx:id="trainCombo" maxWidth="Infinity" promptText="Chọn tàu"/>
    </VBox>
    
    <!-- Ngày khởi hành -->
    <VBox spacing="5">
        <Label text="Ngày Khởi Hành:"/>
        <DatePicker fx:id="departureDatePicker" maxWidth="Infinity" promptText="Chọn ngày"/>
    </VBox>
    
    <!-- Giờ khởi hành -->
    <HBox spacing="10">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Giờ:"/>
            <ComboBox fx:id="hourCombo" maxWidth="Infinity" promptText="Giờ"/>
        </VBox>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Phút:"/>
            <ComboBox fx:id="minuteCombo" maxWidth="Infinity" promptText="Phút"/>
        </VBox>
    </HBox>
    
    <!-- Trạng thái -->
    <VBox spacing="5">
        <Label text="Trạng Thái:"/>
        <ComboBox fx:id="statusCombo" maxWidth="Infinity" promptText="Chọn trạng thái"/>
    </VBox>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Hủy" onAction="#handleCancel" prefWidth="100" styleClass="secondary-button"/>
        <Button text="Lưu" onAction="#handleSave" prefWidth="100" styleClass="primary-button"/>
    </HBox>
</VBox>