<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ptudn12.main.controller.AddScheduleDialogController"
      spacing="20" prefWidth="500" styleClass="dialog-content">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Title -->
    <Label text="Thêm Lịch Trình Mới" styleClass="dialog-title"/>

    <!-- Form Grid -->
    <GridPane hgap="15" vgap="15">
        <!-- Row 0: Tuyến đường -->
        <Label text="Tuyến đường:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="routeCombo" promptText="Chọn tuyến đường" maxWidth="Infinity" prefHeight="35" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Row 1: Tàu -->
        <Label text="Tàu:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="trainCombo" promptText="Chọn tàu" maxWidth="Infinity" prefHeight="35" 
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Row 2: Ngày khởi hành -->
        <Label text="Ngày khởi hành:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="departureDatePicker" promptText="dd/MM/yyyy" maxWidth="Infinity" prefHeight="35" 
                    GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Row 3: Giờ khởi hành -->
        <Label text="Giờ khởi hành:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <ComboBox fx:id="hourCombo" promptText="Giờ" prefWidth="100" prefHeight="35"/>
            <Label text=":" style="-fx-font-size: 20px; -fx-padding: 5 0 0 0;"/>
            <ComboBox fx:id="minuteCombo" promptText="Phút" prefWidth="100" prefHeight="35"/>
        </HBox>

        <!-- Row 4: Giá vé -->
        <Label text="Giá vé cơ bản:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="priceField" promptText="Nhập giá vé (VNĐ)" prefHeight="35" 
                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <!-- Column Constraints -->
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="250"/>
        </columnConstraints>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
        <Button text="Hủy" styleClass="secondary-button" onAction="#handleCancel" prefWidth="100" prefHeight="35"/>
        <Button text="Lưu" styleClass="primary-button" onAction="#handleSave" prefWidth="100" prefHeight="35"/>
    </HBox>
</VBox>