<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20" alignment="TOP_CENTER">

    <Label text="🏠 TRANG CHỦ" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <VBox.margin>
            <Insets bottom="30"/>
        </VBox.margin>
    </Label>

    <!-- Stats Cards -->
    <GridPane hgap="20" vgap="20">
        <!-- Card 1 -->
        <VBox style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 30;" 
              alignment="CENTER" spacing="10" GridPane.columnIndex="0">
            <Label text="📦" style="-fx-font-size: 40px;"/>
            <Label text="Tổng sản phẩm" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <Label text="1,234" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>

        <!-- Card 2 -->
        <VBox style="-fx-background-color: #2ecc71; -fx-background-radius: 10; -fx-padding: 30;" 
              alignment="CENTER" spacing="10" GridPane.columnIndex="1">
            <Label text="👥" style="-fx-font-size: 40px;"/>
            <Label text="Người dùng" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <Label text="567" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>

        <!-- Card 3 -->
        <VBox style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-padding: 30;" 
              alignment="CENTER" spacing="10" GridPane.columnIndex="2">
            <Label text="📊" style="-fx-font-size: 40px;"/>
            <Label text="Doanh thu" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <Label text="89M" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </GridPane>

</VBox>