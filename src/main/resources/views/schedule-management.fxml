<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ptudn12.main.controller.ScheduleManagementController"
            stylesheets="@styles.css"
            prefWidth="1200" prefHeight="700">

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER">
                <Label text="Quản Lý Lịch Trình" styleClass="page-title"/>
            </HBox>

            <!-- Search and Filter Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <HBox.margin>
                    <Insets top="10" bottom="10"/>
                </HBox.margin>

                <ComboBox fx:id="startStationCombo" promptText="Tất cả điểm đi" prefWidth="150" styleClass="filter-combo"/>
                <ComboBox fx:id="endStationCombo" promptText="Tất cả điểm đến" prefWidth="150" styleClass="filter-combo"/>
                <ComboBox fx:id="trainCombo" promptText="Tất cả mã tàu" prefWidth="150" styleClass="filter-combo"/>
                <ComboBox fx:id="statusCombo" promptText="Tất cả trạng thái" prefWidth="150" styleClass="filter-combo"/>
                <Button text="Thêm" styleClass="add-button" onAction="#handleAddSchedule"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="Mã Lịch Trình" minWidth="180"/>
                    <TableColumn fx:id="trainColumn" text="Mã Tàu" minWidth="80" maxWidth="100"/>
                    <TableColumn fx:id="routeColumn" text="Tuyến Đường" minWidth="100"/>
                    <TableColumn fx:id="departureColumn" text="Ngày giờ khởi hành" minWidth="140"/>
                    <TableColumn fx:id="arrivalColumn" text="Ngày giờ đến dự kiến" minWidth="140"/>
                    <TableColumn fx:id="priceColumn" text="Giá cơ bản" minWidth="110"/>
                    <TableColumn fx:id="seatsColumn" text="Số ghế trống/tổng số ghế" minWidth="150"/>
                    <TableColumn fx:id="statusColumn" text="Trạng Thái" minWidth="110" maxWidth="130"/>
                </columns>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Làm mới" styleClass="secondary-button" onAction="#handleRefresh"/>
                <Button text="Sửa" styleClass="primary-button" onAction="#handleEditSchedule"/>
                <Button text="Xóa" styleClass="danger-button" onAction="#handleDeleteSchedule"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>