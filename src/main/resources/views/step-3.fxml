<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="banve-content-wrapper" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ptudn12.main.controller.Step3Controller">
    <stylesheets>
        <URL value="@../css/banve-style.css" />
    </stylesheets>
   <top>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Label text="BÁN VÉ TÀU" styleClass="banve-title" />
            <HBox styleClass="step-indicator-box">
               <children>
                  <Button text="Bước 1: Chọn chuyến tàu" styleClass="step-button-complete" />
                  <Button text="Bước 2: Chọn chỗ ngồi" styleClass="step-button-complete" />
                  <Button text="Bước 3: Thông tin hành khách" styleClass="step-button-active" />
                  <Button text="Bước 4: Thanh toán" styleClass="step-button" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="20.0">
         <VBox styleClass="info-box" VBox.vgrow="ALWAYS">
            <children>
               <Label text="Thông tin hành khách" styleClass="info-box-title" />
               <TableView fx:id="tableViewHanhKhach" editable="true" prefHeight="200.0" VBox.vgrow="ALWAYS">
                 <columns>
                     <TableColumn text="Họ tên">
                       <columns>
                          <TableColumn fx:id="colHoTen" prefWidth="150.0" text="Họ tên" />
                          <TableColumn fx:id="colDoiTuong" prefWidth="150.0" text="Đối tượng" />
                          <TableColumn fx:id="colSoGiayTo" prefWidth="100.0" text="Số giấy tờ" />
                       </columns>
                    </TableColumn>
                    <TableColumn fx:id="colThongTinCho" prefWidth="175.0" text="Thông tin chỗ" />
                    <TableColumn fx:id="colGiaVe" prefWidth="100.0" text="Giá vé" />
                    <TableColumn fx:id="colGiamGia" prefWidth="100.0" text="Giảm đối tượng" />
                    <TableColumn fx:id="colBaoHiem" prefWidth="100.0" text="Bảo hiểm" />
                    <TableColumn fx:id="colThanhTien" prefWidth="110.0" text="Thành tiền" />
                 </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               </TableView>
               <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10px 5px; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
                  <children>
                     <Label text="Tổng tiền:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                     <Label fx:id="labelTongTien" text="1.102.000 đồng" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Label>
                  </children>
               </HBox>
            </children>
         </VBox>
         
         <VBox styleClass="info-box">
            <children>
               <Label text="Thông tin người mua vé" styleClass="info-box-title" />
               <GridPane hgap="20.0" vgap="10.0">
                 <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                 </columnConstraints>
                 <rowConstraints>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <children>
                     <Label text="Họ tên:" />
                     <TextField fx:id="txtNguoiMuaHoTen" text="Nguyễn Văn A" GridPane.columnIndex="1" />
                     <Label text="Số CMND/Hộ chiếu:" GridPane.columnIndex="2" />
                     <TextField fx:id="txtNguoiMuaCMND" text="0123456789" GridPane.columnIndex="3" />
                     <Label text="Email:" GridPane.rowIndex="1" />
                     <TextField fx:id="txtNguoiMuaEmail" text="demo@gmail.com" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     <Label text="Số điện thoại:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                     <TextField fx:id="txtNguoiMuaSDT" text="0123456789" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  </children>
               </GridPane>
            </children>
         </VBox>
      </VBox>
   </center>
   
   <bottom>
      <HBox styleClass="navigation-bar">
         <children>
            <Button text="Quay lại" styleClass="button-secondary" onAction="#handleQuayLai" />
            <Button fx:id="btnTiepTheo" text="Tiếp theo" styleClass="button-primary" onAction="#handleTiepTheo" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
