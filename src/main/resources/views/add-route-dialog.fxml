<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ptudn12.main.controller.AddRouteDialogController"
      spacing="15" prefWidth="450" prefHeight="400">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Thêm Tuyến Đường Mới" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Separator/>
    
    <!-- Điểm đi -->
    <VBox spacing="5">
        <Label text="Điểm Đi:"/>
        <ComboBox fx:id="startStationCombo" maxWidth="Infinity" promptText="Chọn ga đi"/>
    </VBox>
    
    <!-- Điểm đến -->
    <VBox spacing="5">
        <Label text="Điểm Đến:"/>
        <ComboBox fx:id="endStationCombo" maxWidth="Infinity" promptText="Chọn ga đến"/>
    </VBox>
    
    <!-- Thời gian dự kiến -->
    <VBox spacing="5">
        <Label text="Thời Gian Dự Kiến (giờ):"/>
        <TextField fx:id="durationField" promptText="Nhập số giờ (>= 1)"/>
    </VBox>
    
    <!-- Trạng thái -->
    <VBox spacing="5">
        <Label text="Trạng Thái:"/>
        <ComboBox fx:id="statusCombo" maxWidth="Infinity" promptText="Chọn trạng thái"/>
    </VBox>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Hủy" onAction="#handleCancel" prefWidth="100" styleClass="secondary-button"/>
        <Button text="Lưu" onAction="#handleSave" prefWidth="100" styleClass="primary-button"/>
    </HBox>
</VBox>