<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ptudn12.main.controller.CustomerManagementController"
           stylesheets="@styles.css"
           prefWidth="1200" prefHeight="700">

<BorderPane>

    <!-- Main Content -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- ================== PHẦN HEADER ĐÃ ĐƯỢC SỬA LẠI ================== -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Quản Lý Khách Hàng" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Tìm theo tên, CCCD, điểm..." prefWidth="250"/>
                <Button text="Tìm kiếm" styleClass="primary-button" onAction="#handleSearch"/>
                <!-- Lưu ý: Tôi đã đổi tên nút từ "hóa đơn" sang "khách hàng" cho đúng ngữ cảnh -->
                <Button text="Hiển thị tất cả" styleClass="secondary-button" onAction="#handleShowAll"/>
            </HBox>

            <!-- Table (giữ nguyên) -->
            <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="Mã Khách hàng" minWidth="120"/>
                    <TableColumn fx:id="nameColumn" text="Họ tên" minWidth="200"/>
                    <TableColumn fx:id="cccdColumn" text="CCCD" minWidth="150"/>
                    <TableColumn fx:id="passportColumn" text="Hộ chiếu" minWidth="150"/>
                    <TableColumn fx:id="phoneColumn" text="Số điện thoại" minWidth="150"/>
                    <TableColumn fx:id="pointsColumn" text="Điểm tích" minWidth="100"/>
                </columns>
            </TableView>

            <!-- ================== PHẦN FOOTER ĐÃ ĐƯỢC SỬA LẠI ================== -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label fx:id="customerCountLabel" styleClass="field-label-bold"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Làm mới" styleClass="secondary-button" onAction="#handleRefresh"/>
                <Button text="Xem lịch sử mua vé" styleClass="secondary-button" onAction="#handleViewHistory"/>
                <Button text="Thêm" styleClass="add-button" onAction="#handleAddCustomer"/>
                <Button text="Sửa" styleClass="primary-button" onAction="#handleEditCustomer"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>

    <StackPane fx:id="loadingOverlay" visible="false" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
        <ProgressIndicator maxWidth="60" maxHeight="60"/>
    </StackPane>

</StackPane>